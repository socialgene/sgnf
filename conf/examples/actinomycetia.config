/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/actinomycetia'

        nextflow run nextflow \
            -profile actinomycetia,conda \
            --single_outdir $outdir \
            --fasta_splits 2000 \
            -resume

    fasta_splits = 40 // Due to evaluation order, fasta_splits has to be in the command, not in the config param "0" means no splits (ie 1 sequence)

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Annotate all RefSeq Micromonospora'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    enable_conda = true // leave this as true
    ncbi_datasets_taxon = "Actinomycetia --assembly-level complete_genome --assembly-source refseq"
    max_cpus   = 24
    max_memory = 62.GB
    max_time   = 6000.h
    mode = 'dev'
    builddb = true

/*
set which modules to run
*/
    hmms            = true
    ncbi_taxonomy   = true
    mmseqs2         = true
    blastp          = false // only set to true for small datasets
    paired_omics    = false

}


process {

 withName:PYHMMER {
        cpus   = { check_max( 2    * task.attempt, 'cpus'    ) }
        memory = { check_max( 3 * task.attempt, 'memory'  ) }
        time   = { check_max( 60.h  * task.attempt, 'time'    ) }
    }
}


