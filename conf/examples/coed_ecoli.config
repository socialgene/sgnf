/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/coed_ecoli'

        nextflow run . \
            -profile coed_ecoli,conda \
            --single_outdir $outdir \
            --fasta_splits 12 \
            -resume
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Simple run'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    enable_conda = true
    max_cpus   = 24
    max_memory = 62.GB
    max_time   = 6000.h

    builddb = true
    hmmlist = 'all'
    gbk_input                   = '/home/chase/Documents/data/coed_ecoli/GCF_000005845.2_ASM584v2_genomic.gbff.gz'
    sequence_files_glob         = '*.gbff.gz'

/*
set which modules to run
*/
    hmms            = true
    ncbi_taxonomy   = true
    mmseqs2         = true
    blastp          = true // only set to true for small datasets
    paired_omics    = false

}

process {

 withName:PYHMMER {
        cpus   = { check_max( 2    * task.attempt, 'cpus'    ) }
        memory = { check_max( 3 * task.attempt, 'memory'  ) }
        time   = { check_max( 60.h  * task.attempt, 'time'    ) }
    }
}
