/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/cog'

        nextflow run . \
            -profile cog_validation,conda \
            --single_outdir $outdir \
            --fasta_splits 24 \
            -resume
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Simple run'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    enable_conda = true
    max_cpus   = 24
    max_memory = 62.GB
    max_time   = 6000.h

    builddb = true
    hmmlist = 'all'
    gbk_input                   = '/home/chase/Downloads/cog-20.fa.gz'
    sequence_files_glob         = '*.fa.gz'

/*
set which modules to run
*/
    hmms            = true
    ncbi_taxonomy   = false
    mmseqs2         = true
    blastp          = false // only set to true for small datasets
    paired_omics    = false

}

process {
 withName:HMMER_HMMSEARCH {
    cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
    memory = { check_max( 3    * task.attempt, 'memory'  ) }
    time   = { check_max( 60.h * task.attempt, 'time'   ) }
 }
}

