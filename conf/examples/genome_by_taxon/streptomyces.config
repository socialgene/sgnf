/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/streptomyces'

        nextflow run . \
            -profile streptomyces,conda \
            --outdir $outdir \
            --fasta_splits 1000 \
            --htcondor \
            -resume

    # The second parses the HTCONDOR results and then all other computation (e.g. BLASTp, MMseqs2)
        nextflow run . \
            -profile streptomyces,conda \
            --outdir $outdir \
            --domtblout_path '/home/chase/Documents/socialgene_data/streptomyces/chtc_results/chtc_results' \
            -resume






----------------------------------------------------------------------------------------
*/

params {
    ncbi_genome_download_command = '--assembly-levels complete,chromosome,scaffold,contig bacteria --section genbank --genera "Streptomyces" --parallel 8'

    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = true
        hmmlist         = ["antismash","amrfinder","pfam","prism","resfams","tigrfam"]
        mmseqs2         = true
        blastp          = true
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 1000
        max_cpus                    = 24
        max_memory                  = '60.GB'
        max_time                    = 60000.h

}

process {
    withName:HMMER_HMMSEARCH {
       cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
       memory = { check_max( 8    * task.attempt, 'memory'  ) }
       time   = { check_max( 60000.h * task.attempt, 'time'   ) }
    }
    withName:DIAMOND_BLASTP {
        cpus = 20
        ext.args = "-k0 --max-hsps 1 --query-cover 90 --subject-cover 90 --id 50 --block-size 2 --fast"
    }
    withName:SEQKIT_SPLIT {
        cpus   = { check_max( 5    * task.attempt, 'cpus'    ) }
        memory = { check_max( 60.GB    * task.attempt, 'memory'  ) }
        time   = { check_max( 60000.h * task.attempt, 'time'   ) }
    }
}
