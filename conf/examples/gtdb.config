/*
    Use as follows:

       curl -s https://data.gtdb.ecogenomic.org/releases/latest/bac120_metadata.tar.gz |\
            tar -xzvf - --to-stdout |\
            awk -F "\t" '$16=="t"' |\
            cut -f55 |\
            grep -E "GCF_|GCA_" > /tmp/62291_gtdb_genome_accessions.txt

        outdir='/home/chase/Documents/socialgene_data/gtdb'

        nextflow run . \
            -profile gtdb,conda  \
            --queueSize 80 \
            --outdir $outdir \
            --htcondor true \
            -resume

        rm /tmp/62291_gtdb_genome_accessions.txt

----------------------------------------------------------------------------------------
*/

params {

        local_genbank = '/media/box3/chase_clark/gtdb/*.gz'

    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = false
        hmmlist         = ["antismash","amrfinder","pfam","resfams","tigrfam"]
        mmseqs2         = true
        blastp          = true
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 3000
        max_cpus                    = 40
        max_memory                  = '120.GB'
        max_time                    = 60000.h

}

process {
    withName:HMMER_HMMSEARCH {
       cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
       memory = { check_max( 8    * task.attempt, 'memory'  ) }
       time   = { check_max( 60000.h * task.attempt, 'time'   ) }
    }
    withName:DIAMOND_BLASTP {
        cpus = 100
        ext.args = "-k0 --max-hsps 1 --query-cover 90 --subject-cover 90 --id 90 --block-size 6 --fast"
    }
    withName:SEQKIT_SPLIT {
       cpus   = { check_max( 20    * task.attempt, 'cpus'    ) }
       memory = { check_max( 120   * task.attempt, 'memory'  ) }
       time   = { check_max( 60000.h * task.attempt, 'time'   ) }
       ext.args = "--two-pass"
    }
}
