/*
    Use as follows:
        // The curl command downloads MIBiG BGC0000001 from Genbank
        curl -s "https://eutils.ncbi.nlm.nih.gov/entrez/eutils/efetch.fcgi?db=nuccore&id=JF752342.1&rettype=gbwithparts&retmode=text" | gzip > "/tmp/JF752342.1.gb.gz"


//paired omics a4837d37-1df1-4153-b365-c06841574235.3
https://pairedomicsdata.bioinformatics.nl/projects/a4837d37-1df1-4153-b365-c06841574235.3


        outdir='/home/chase/Documents/socialgene_data/og'

        nextflow run . \
            -profile input_examples,docker \
            --outdir $outdir \
            -resume

----------------------------------------------------------------------------------------
*/

params {
        // Use the downloaded BGC0000001 as input
       local_genbank = '/home/chase/Documents/data/mibig/3_1/mibig_genomes/*.gz'


    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        antismash       = false
        mibig           = false
        hmmlist         = false
        mmseqs2         = true
        blastp          = true // only set to true for small datasets
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 24
        max_cpus                    = 24
        max_memory                  = '62.GB'
        max_time                    = 6000.h

}

