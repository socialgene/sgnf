/*
    Use as follows:
        // The curl command downloads MIBiG BGC0000001 from Genbank
        curl -s "https://eutils.ncbi.nlm.nih.gov/entrez/eutils/efetch.fcgi?db=nuccore&id=JF752342.1&rettype=gbwithparts&retmode=text" | gzip > "/tmp/JF752342.1.gb.gz"


//paired omics a4837d37-1df1-4153-b365-c06841574235.3
https://pairedomicsdata.bioinformatics.nl/projects/a4837d37-1df1-4153-b365-c06841574235.3


        outdir='/home/chase/Documents/socialgene_data/a4837d37-1df1-4153-b365-c06841574235.3'

        nextflow run . \
            -profile input_examples,docker \
            --outdir $outdir \
            -resume

----------------------------------------------------------------------------------------
*/

params {
        // Use the downloaded BGC0000001 as input
       local_genbank = '/home/chase/Downloads/test/*.gbff.gz'



    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        antismash       = true
        mibig = false
        hmmlist         = ["antismash","amrfinder","prism","pfam","resfams","tigrfam"]
        mmseqs2         = true
        blastp          = true // only set to true for small datasets
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 24
        max_cpus                    = 24
        max_memory                  = '62.GB'
        max_time                    = 6000.h

}

process {
    withName:HMMER_HMMSEARCH {
       cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
       memory = { check_max( 2    * task.attempt, 'memory'  ) }
       time   = { check_max( 60.h * task.attempt, 'time'   ) }
    }
    withName:DIAMOND_BLASTP {
        cpus = 24
        ext.args = "-k0 --max-hsps 1 --query-cover 90 --subject-cover 90 --id 30 --block-size 6 --fast"
    }
}
