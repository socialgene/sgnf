/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/refseq_trials'

        nextflow run . \
            -profile refseq,conda \
            --single_outdir $outdir \
            -resume


----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Annotate all RefSeq Streptomyces'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    enable_conda = true // leave this as true
    max_cpus   = 24
    max_memory = '62 GB'
    max_time   = 6000.h
    mode = 'dev'
    builddb = true
    hmmlist = 'antismash'
    refseq_nr_protein_fasta_dir     = '/home/chase/Documents/data/refseq/complete'
    crabhash_path                    = '/home/chase/Documents/github/kwan_lab/crabhash/target/release'


/*
set which modules to run
*/
    hmms            = true
    ncbi_taxonomy   = false
    mmseqs2         = false
    blastp          = false // only set to true for small datasets
    paired_omics    = false

}


process {

 withName:HMMER_HMMSEARCH {
        cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
        memory = '2.GB'
        time   = { check_max( 60.h  * task.attempt, 'time'    ) }
    }
}
