/*
    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/mibig'
        nextflow run . \
            -profile mibig,docker \
            --outdir $outdir \
            -resume

----------------------------------------------------------------------------------------
*/

params {
    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = true
        hmmlist         = ["all"]
        mmseqs2         = true
        blastp          = true // only set to true for small datasets
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 24
        max_cpus                    = 24
        max_memory                  = '62.GB'
        max_time                    = 24.h

}

