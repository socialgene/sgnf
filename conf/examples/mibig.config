/*
    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/mibig2'
        outdir_download_cache='/home/chase/Documents/socialgene_data/cache'

        nextflow run . \
            -profile mibig,docker \
            --outdir $outdir \
            --outdir_download_cache $outdir_download_cache \
            --htcondor \
            -resume

        nextflow run . \
            -profile mibig,docker \
            --outdir $outdir \
            --outdir_download_cache $outdir_download_cache \
            --domtblout_path '/home/chase/Documents/socialgene_data/mibig2/htcondor_cache/chtc_results/*.domtblout.gz' \
            -resume
----------------------------------------------------------------------------------------
*/

params {

   local_genbank = '/home/chase/Documents/data/mibig/3_1/mibig_genomes/*.gz'

    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = true
        hmmlist         = ["antismash","amrfinder","pfam","resfams","tigrfam"]
        mmseqs2         = true
        blastp          = true // only set to true for small datasets
        ncbi_taxonomy   = true
        build_database  = true
        antismash       = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 50
        hmm_splits                  = 10
        max_cpus                    = 24
        max_memory                  = '60.GB'
        max_time                    = 24.h

}
