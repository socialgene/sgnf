/*
    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/mibig'
        nextflow run . \
            -profile mibig,conda \
            --outdir $outdir \
            -resume

----------------------------------------------------------------------------------------
*/

params {
    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = true
        hmmlist         = ["antismash","amrfinder","bigslice","classiphage","pfam","prism","resfams","tigrfam"]
        mmseqs2         = true
        blastp          = true // only set to true for small datasets
        ncbi_taxonomy   = true
        build_database  = true
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 24
        max_cpus                    = 24
        max_memory                  = '62.GB'
        max_time                    = 24.h

}

process {
    withName:HMMER_HMMSEARCH {
       cpus   = { check_max( 1    * task.attempt, 'cpus'    ) }
       memory = { check_max( 2    * task.attempt, 'memory'  ) }
       time   = { check_max( 24.h * task.attempt, 'time'   ) }
    }
    withName:DIAMOND_BLASTP {
        cpus = 24
        ext.args = "-k0 --max-hsps 1 --query-cover 90 --subject-cover 90 --id 30 --block-size 6 --more-sensitive"
    }
}
