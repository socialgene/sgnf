/*
    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/mibig'
        outdir_download_cache='/home/chase/Documents/socialgene_data/cache'

        nextflow run . \
            -profile mibig,docker \
            --outdir $outdir \
            --outdir_download_cache $outdir_download_cache \
            -resume

        nextflow run . \
            -profile mibig,docker \
            --outdir $outdir \
            --outdir_download_cache $outdir_download_cache \
            -resume
----------------------------------------------------------------------------------------
*/

params {

    // local_genbank = '/home/chase/Documents/data/mibig/3_1/mibig_genomes/*.gz'

    /*
    ////////////////////////
    set which modules to run
    ////////////////////////
    */
        mibig           = true
        hmmlist         = [] // ["antismash"]
        mmseqs2         = false
        blastp          = false // only set to true for small datasets or if you know what you're doing
        ncbi_taxonomy   = false
        build_database  = true
        antismash       = false
        chembl          = false
    /*
    ////////////////////////
    adjust per your computer
    ////////////////////////
    */
        fasta_splits                = 24
        hmm_splits                  = 1
        max_cpus                    = 24
        max_memory                  = '60.GB'
        max_time                    = 24.h

}
