/*
========================================================================================
    Config file for defining DSL2 per module options and publishing paths
========================================================================================
    Available keys to override module options:
        ext.args            = Additional arguments appended to command in module.
        ext.args2           = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3           = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix          = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.tracedir}" },
            mode: 'copy',
            pattern: '*_versions.yml'
        ]
    }

    withName:'ANTISMASH'{
       ext.args = ""
    }
    withName:'HMMER_HMMSEARCH'{
       ext.args = ""
    }

    withName:'DIAMOND_BLASTP'{
       ext.args = '-k0 --max-hsps 1 --compress 1'
    }

    withName:'MMSEQS2_EASYCLUSTER'{
       // https://github.com/soedinglab/mmseqs2/wiki#how-to-set-the-right-alignment-coverage-to-cluster
       storeDir = {"${params.outdir_mmseqs2_cache}"}
       ext.args = '--min-seq-id 0.5 -c 0.8 --cov-mode 0'
    }

    withName: 'NCBI_DATASETS_DOWNLOAD' {
       ext.args = '--include-gbff --exclude-genomic-cds --exclude-protein --exclude-rna --exclude-seq --exclude-gff3'
    }

    withName: 'NCBI_GENOME_DOWNLOAD' {
        ext.args   = "${params.ncbi_genome_download_command}"
    }

    /*
    ========================================================================================
    NEO4J IMPORT FILES
    ========================================================================================
    */

    withName: 'NEO4J_HEADERS|TAXDUMP_PROCESS|HMM_TSV_PARSE' {
        publishDir = [
                path: { "${params.outdir_neo4j}/import/${task.process.tokenize(':')[-1].toLowerCase()}" },
            mode: 'copy',
        ]
    }

    withName: 'DIAMOND_BLASTP|MMSEQS2_EASYCLUSTER' {
        publishDir = [
                path: { "${params.outdir_neo4j}/import/${task.process.tokenize(':')[-1].toLowerCase()}" },
            mode: 'copy',
        ]
    }

    withName: 'HMM_HASH' {
        publishDir = [
                path: { "${params.outdir_per_run}/hmm_cache" },
            mode: 'copy',
        ]
    }

    withName:'HMMSEARCH_PARSE'{
        publishDir = [
            path: { "${params.outdir_neo4j}/import/parsed_domtblout" },
            mode: 'copy',
        ]
    }

    withName:'TIGRFAM_INFO_DOWNLOAD|TIGRFAM_ROLES|TIGRFAM_TO_GO|TIGRFAM_TO_ROLE'{
        publishDir = [
            path: { "${params.outdir_neo4j}/import/tigrfam_info" },
            mode: 'copy',
        ]
    }
    withName:'PARAMETER_EXPORT_FOR_NEO4J'{
        ext.args = "${params.ncbi_genome_download_command}"
        publishDir = [
            path: { "${params.outdir_neo4j}/import/parameters" },
            mode: 'copy',
        ]
    }

    withName: 'CRABHASH' {
        publishDir = [
            path: {"${params.outdir_neo4j}/import/protein_info"},
            mode: 'copy',
            overwrite: false,
            pattern: "*.protein_info.gz"

        ]
    }

    /*
    ========================================================================================
    CACHE FILES
    ========================================================================================
    */


   // BLAST outputs
    withName: 'DIAMOND_MAKEDB' {
        storeDir = {"${params.outdir_blast_cache}"}
    }

    // HMM outputs
    withName: 'DOWNLOAD_HMM_DATABASE' {
        storeDir = {"${params.outdir_download_cache}/${database.toLowerCase()}"}
    }

    // MISC Downloads
    withName: 'TIGRFAM_INFO_DOWNLOAD|TAXDUMP_DOWNLOAD' {
        storeDir = {"${params.outdir_download_cache}/${task.process.tokenize(':')[-1].toLowerCase()}"}
    }

    withName: 'MIBIG_DOWNLOAD|NCBI_GENOME_DOWNLOAD|NCBI_DATASETS_DOWNLOAD' {
        storeDir = { "${params.outdir_genomes}/${task.process.tokenize(':')[-1].toLowerCase()}" }

    }

    withName: 'HTCONDOR_PREP' {
        storeDir = {"${params.htcondor_directory}"}
    }

    withName: 'SEQKIT_RMDUP' {
        publishDir = [
            path: { "${params.outdir_per_run}/nonredundant_fasta" },
            mode: 'copy',
        ]
    }

    withName: 'NEO4J_ADMIN_IMPORT' {
        publishDir = [
            path: {"${params.outdir_neo4j}"},
            mode: 'copy',
        ]
    }

    withName: 'NEO4J_ADMIN_IMPORT_DRYRUN' {
        publishDir = [
            path: {"${params.outdir_neo4j}"},
            mode: 'copy',
        ]
    }


    withName:'ANTISMASH'{
          storeDir = {"${params.outdir_per_run}/antismash_results"}
       }

    withName: 'ANTISMASH_GBK_TO_TABLE' {
        publishDir = [
            path: { "${params.outdir_neo4j}/import" },
            mode: 'copy',
        ]
    }

}


