        storeDir = {"${params.outdir_download_cache}/${task.process.tokenize(':')[-1].toLowerCase()}"}
    }
    withName: 'DOWNLOAD_REFSEQ_NONREDUNDANT_COMPLETE' {
        storeDir = {"${params.refseq_nr_protein_fasta_dir}"}
