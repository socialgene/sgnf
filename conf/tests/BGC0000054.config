/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    https://mibig.secondarymetabolites.org/repository/BGC0000054/BGC0000054.gbk

    Use as follows:

        outdir='/home/chase/Documents/socialgene_data/BGC0000054'

        nextflow run nextflow \
            -profile BGC0000054,conda \
            --single_outdir $outdir \
            -resume
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Simple run'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    enable_conda = true // leave this as true
    max_cpus   = 24
    max_memory = 62.GB
    max_time   = 6000.h
    mode = 'dev'
    builddb = true
    hmmlist = 'pfam'
    gbk_input                   = '/home/chase/Downloads/BGC0000054.gbk'
    sequence_files_glob         = '*.gbk'



/*
set which modules to run
*/
    hmms            = true
    ncbi_taxonomy   = false
    mmseqs2         = true
    blastp          = true // only set to true for small datasets
    paired_omics    = false

}

process {

 withName:PYHMMER {
        cpus   = { check_max( 2    * task.attempt, 'cpus'    ) }
        memory = { check_max( 3 * task.attempt, 'memory'  ) }
        time   = { check_max( 60.h  * task.attempt, 'time'    ) }
    }
}
